<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CheckoutFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           app:cardCornerRadius="8dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
           android:layout_height="85dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="8dp"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="match_parent"
                   android:text="Shipping Address"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:textSize="14sp"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_width="match_parent"
                   android:text="Add your shiping address"
                   android:layout_marginTop="8dp"
                   android:textColor="@color/black"
                   android:drawableRight="@drawable/arrow_right_24"
                   android:textSize="14sp"
                   android:layout_height="wrap_content"/>

           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           app:cardCornerRadius="8dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
           android:layout_height="85dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="8dp"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="match_parent"
                   android:text="Payment methods"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:textSize="14sp"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_width="match_parent"
                   android:text="Choose Payment Methods"
                   android:layout_marginTop="8dp"
                   android:textColor="@color/black"
                   android:drawableRight="@drawable/arrow_right_24"
                   android:textSize="14sp"
                   android:layout_height="wrap_content"/>

           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           app:cardCornerRadius="8dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
           android:layout_height="85dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="8dp"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="match_parent"
                   android:text="Shipping Methods"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:textSize="14sp"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_width="match_parent"
                   android:text="Choose Shiping Methods"
                   android:layout_marginTop="8dp"
                   android:textColor="@color/black"
                   android:drawableRight="@drawable/arrow_right_24"
                   android:textSize="14sp"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="8dp"
                   android:layout_weight="1"
                   android:text="Total Amount"
                   android:textColor="@color/black"
                   android:textStyle="bold" />
           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           app:cardCornerRadius="8dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
           android:layout_height="310dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:background="@color/white"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="match_parent"
                   android:text="Order Summary"
                   android:textSize="17sp"
                   android:padding="8dp"
                   android:background="#EBEDEC"
                   android:paddingRight="20dp"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:layout_height="wrap_content"/>

               <View
                   android:layout_width="wrap_content"
                   android:layout_height="1dp"
                   android:layout_marginTop="10dp"
                   android:background="#F0020102"/>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="8dp"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginTop="8dp"
                       android:text="List Price"
                       android:textStyle="bold"
                       android:textColor="@color/black" />


                   <TextView
                       android:layout_width="0dp"
                       android:id="@+id/listPrice"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="150dp"
                       android:text="₹ 10000"
                       android:gravity="center"
                       android:textColor="@color/black"
                       android:textStyle="bold" />

               </LinearLayout>

               <View
                   android:layout_width="wrap_content"
                   android:layout_height="1dp"
                   android:layout_marginTop="10dp"
                   android:background="#F0020102"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="8dp"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginTop="8dp"
                       android:text="Selling Price"
                       android:textStyle="bold"
                       android:textColor="@color/black" />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="150dp"
                       android:text="₹ 1000"
                       android:gravity="center"
                       android:textColor="@color/black"
                       android:textStyle="bold" />

               </LinearLayout>

               <View
                   android:layout_width="wrap_content"
                   android:layout_height="1dp"
                   android:layout_marginTop="10dp"
                   android:background="#F0020102"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginTop="8dp"
                       android:text="Delivery"
                       android:textStyle="bold"
                       android:textColor="@color/black" />

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="150dp"
                       android:text="Free"
                       android:gravity="center"
                       android:textColor="@color/black"
                       android:textStyle="bold" />

               </LinearLayout>

               <View
                   android:layout_width="wrap_content"
                   android:layout_height="1dp"
                   android:layout_marginTop="10dp"
                   android:background="#F0020102"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginTop="8dp"
                       android:text="Amount Payable"
                       android:textStyle="bold"
                       android:textColor="@color/black" />

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="150dp"
                       android:text="₹ 10000"
                       android:gravity="center"
                       android:textColor="@color/black"
                       android:textStyle="bold" />

               </LinearLayout>

               <View
                   android:layout_width="wrap_content"
                   android:layout_height="1dp"
                   android:layout_marginTop="10dp"
                   android:background="#F0020102"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginLeft="150dp"
                       android:text="₹ 10000"
                       android:gravity="center"
                       android:textColor="@color/black"
                       android:textStyle="bold" />

               </LinearLayout>

               <View
                   android:layout_width="wrap_content"
                   android:layout_height="1dp"
                   android:layout_marginTop="10dp"
                   android:background="#F0020102"/>
           </LinearLayout>

       </androidx.cardview.widget.CardView>


       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           app:cardCornerRadius="8dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
           android:layout_height="90dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_marginTop="15dp"
               android:layout_marginLeft="8dp"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="match_parent"
                   android:text="Total : 1200"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:textSize="14sp"
                   android:layout_height="wrap_content"/>

               <Button
                   android:layout_width="match_parent"
                   android:layout_height="55dp"
                   android:text="Place Order"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:backgroundTint="#1B468E"
                   style="@style/Widget.MaterialComponents.Button.TextButton"
                   />
           </LinearLayout>
       </androidx.cardview.widget.CardView>


   </LinearLayout>
</ScrollView>