<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.TrackOrderFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="wrap_content">

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_margin="8dp"
          app:cardCornerRadius="8dp"
          android:layout_height="wrap_content">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <ImageView
                  android:layout_width="160dp"
                  android:id="@+id/trackImg"
                  android:layout_height="85dp"
                  android:scaleType="fitCenter"
                  app:srcCompat="@drawable/laptop" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_marginLeft="5dp"
                  android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="match_parent"
                      android:id="@+id/trackText1"
                      android:layout_height="wrap_content"
                      android:text="Apple MackBook Air"
                      android:textStyle="bold"
                      android:textColor="@color/black"
                      android:textSize="14sp" />

                  <TextView
                      android:layout_width="match_parent"
                      android:id="@+id/trackText2"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="2dp"
                      android:text="â‚¹ 200000"
                      android:textSize="14sp" />

                  <RatingBar
                      style="?android:attr/ratingBarStyleSmall"
                      android:id="@+id/ratingBar"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="2dp"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      tools:layout_constraintLeft_creator="1"
                      tools:layout_constraintRight_creator="1"
                      tools:layout_constraintTop_creator="1" />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="2dp"
                      android:text="Rate this product now"
                      android:textSize="14sp" />

              </LinearLayout>

          </LinearLayout>

      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          app:cardCornerRadius="10dp"
          android:layout_height="wrap_content">

     <LinearLayout
         android:layout_width="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="50dp"
         android:layout_marginBottom="50dp"
         android:layout_height="wrap_content">
      <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

      <ImageView
          android:layout_width="20dp"
          android:layout_marginLeft="5dp"
          android:src="@drawable/baseline_circle_24"
          android:layout_height="wrap_content"/>

        <View
            android:layout_width="3dp"
            android:layout_height="80dp"
            android:background="#E91E63"
            android:layout_marginLeft="13dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/baseline_circle_24"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="3dp"
            android:layout_height="80dp"
            android:background="#E91E63"
            android:layout_marginLeft="13dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/baseline_circle_24"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="3dp"
            android:layout_height="80dp"
            android:background="#E91E63"
            android:layout_marginLeft="13dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/baseline_circle_24"
            android:layout_height="wrap_content"/>




    </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_height="wrap_content">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:layout_marginLeft="10dp"
                 android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="match_parent"
                     android:text="Order Comfirmed"
                     android:textSize="16sp"
                     android:textColor="@color/black"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:layout_width="match_parent"
                     android:text="Your order has been placed"
                     android:textSize="14sp"
                     android:layout_marginTop="7dp"
                     android:textColor="@color/black"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:layout_width="match_parent"
                     android:text="Sun,26th May '24 - 12:20pm"
                     android:textSize="14sp"
                     android:layout_height="wrap_content"/>

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:layout_marginTop="35dp"
                 android:layout_marginLeft="10dp"
                 android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="match_parent"
                     android:text="Shipped"
                     android:textSize="16sp"
                     android:textColor="@color/black"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:layout_width="match_parent"
                     android:text="Your item has been shipped"
                     android:textSize="14sp"
                     android:layout_marginTop="7dp"
                     android:textColor="@color/black"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:layout_width="match_parent"

                     android:text="Sun,28th May '24 - 06:20am"
                     android:textSize="14sp"
                     android:layout_height="wrap_content"/>

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:layout_marginTop="35dp"
                 android:layout_marginLeft="10dp"
                 android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="match_parent"
                     android:text="Out For Delivery"
                     android:textSize="16sp"
                     android:textColor="@color/black"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:layout_width="match_parent"
                     android:text="Your item is out for delivery"
                     android:textSize="14sp"
                     android:layout_marginTop="7dp"
                     android:textColor="@color/black"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:layout_width="match_parent"
                     android:text="Sun,30th May '24 - 12:20pm"
                     android:textSize="16sp"
                     android:layout_height="wrap_content"/>

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:layout_marginTop="35dp"
                 android:layout_marginLeft="10dp"
                 android:layout_height="wrap_content">

                 <TextView
                     android:layout_width="match_parent"
                     android:text="Delivered"
                     android:textSize="16sp"
                     android:textColor="@color/black"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:layout_width="match_parent"
                     android:text="Your item has been delivered"
                     android:textSize="14sp"
                     android:layout_marginTop="7dp"
                     android:textColor="@color/black"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:layout_width="match_parent"
                     android:text="Sun,31st May '24 - 11:20pm"
                     android:textSize="14sp"
                     android:layout_height="wrap_content"/>

             </LinearLayout>
         </LinearLayout>


     </LinearLayout>


      </androidx.cardview.widget.CardView>

  </LinearLayout>

</ScrollView>